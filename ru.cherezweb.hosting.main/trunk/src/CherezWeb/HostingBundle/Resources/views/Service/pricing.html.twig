{% extends 'CherezWebHostingBundle::layout.html.twig' %}
{% set headTitle = 'Цены' %}
{% block headline %}Цены{% endblock headline %}
{% block content_row %}
    <div class="row">
        {% for plan in plans %}
            <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="panel panel-info" style="text-align: center;">
                    <div class="panel-heading">
                            <h3>{{ plan.title }}</h3>
                    </div>
                    <div class="panel-body">
                        <h4><span class="label label-default">{{ (plan.diskQuota / 1073741824) | number_format(2, ',', ' ') }}&nbsp;ГБ</span> на SSD диске</h4>
                        <br/>
                        <div class="well" style="height: 200px; overflow-y: scroll;text-align: left;">
                            {{ plan.description | raw }}
                        </div>
                        <a href="{{ path('cherez_web_hosting_security_registartion') }}" class="btn btn-lg btn-block btn-info allocation-create-btn"><big>{{ (plan.price / 100) | number_format(2, ',', ' ') }}<small>&nbsp;р./мес.</small></big></a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <p>
        <a href="http://magazini.cherezweb.ru/" target="_blank"><img style="width: 100%;" src="{{ asset('bundles/cherezwebhosting/img/magazini-banner.jpg') }}"/></a>
    </p>
{% endblock content_row %}